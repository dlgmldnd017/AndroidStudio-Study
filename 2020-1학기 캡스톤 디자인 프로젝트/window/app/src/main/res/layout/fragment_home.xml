<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_background1"
        android:layout_width="match_parent"
        android:layout_height="337dp"
        android:background="#F6F6F6">

        <ImageButton
            android:id="@+id/home_button1"
            android:layout_width="76dp"

            android:layout_height="67dp"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="#F6F6F6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.209"
            app:layout_constraintStart_toEndOf="@+id/home_textView3"
            app:layout_constraintTop_toBottomOf="@+id/home_textView2"
            app:srcCompat="@android:drawable/ic_popup_sync" />

        <ImageView
            android:id="@+id/Home_imageView1"
            android:layout_width="192dp"
            android:layout_height="126dp"
            android:layout_marginStart="31dp"
            android:layout_marginLeft="31dp"
            android:background="#F6F6F6"
            android:src="@drawable/cloudy"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_textView1" />

        <ImageView
            android:id="@+id/home_imageView2"
            android:layout_width="129dp"
            android:layout_height="109dp"
            android:src="@drawable/rainny"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/Home_imageView1"
            app:layout_constraintEnd_toEndOf="@+id/Home_imageView1"
            app:layout_constraintStart_toStartOf="@+id/Home_imageView1"
            app:layout_constraintTop_toTopOf="@+id/Home_imageView1" />

        <ImageView
            android:id="@+id/home_imageView3"
            android:layout_width="133dp"
            android:layout_height="118dp"
            android:src="@drawable/rainny"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/Home_imageView1"
            app:layout_constraintEnd_toEndOf="@+id/Home_imageView1"
            app:layout_constraintStart_toStartOf="@+id/Home_imageView1" />

        <TextView
            android:id="@+id/home_textView1"
            android:layout_width="268dp"
            android:layout_height="34dp"
            android:layout_marginStart="71dp"
            android:layout_marginLeft="71dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="72dp"
            android:layout_marginRight="72dp"
            android:gravity="center"
            android:text="기기를 추가해 주세요."
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/home_textView2"
            android:layout_width="172dp"
            android:layout_height="123dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center|left"
            android:text="--℃"
            android:textColor="#000000"
            android:textSize="70sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_textView1" />

        <TextView
            android:id="@+id/home_textView3"
            android:layout_width="191dp"
            android:layout_height="55dp"
            android:layout_marginStart="76dp"
            android:layout_marginLeft="76dp"
            android:gravity="center"
            android:text="--"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/home_textView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Home_imageView1"
            app:layout_constraintVertical_bias="0.45" />

        <TextView
            android:id="@+id/home_textView4"
            android:layout_width="142dp"
            android:layout_height="27dp"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="40dp"
            android:gravity="center|left"
            android:text="미세먼지: ---"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/home_textView5"
            android:layout_width="142dp"
            android:layout_height="27dp"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="22dp"
            android:layout_marginEnd="37dp"
            android:layout_marginRight="37dp"
            android:layout_marginBottom="40dp"
            android:gravity="center|left"
            android:text="초미세먼지: ---"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/home_textView4" />

        <TextView
            android:id="@+id/textView999"
            android:layout_width="140dp"
            android:layout_height="17dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="9sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.881"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_button1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F6F6F6"
        android:orientation="horizontal">

        <Button
            android:id="@+id/home_button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5628FFBB"
            android:text="현재 기기의 날씨 바꾸기"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_background2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6F6F6"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/home_one"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#F6F6F6"
            android:visibility="invisible"
            app:cardBackgroundColor="#F6F6F6"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F6F6F6"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#F6F6F6"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/home_textview6"
                        android:layout_width="131dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/home_textview7"
                        android:layout_width="109dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:textColor="#FF0000FF"
                        android:textSize="20sp" />

                    <Switch
                        android:id="@+id/home_switch1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="자동화" />

                    <Switch
                        android:id="@+id/home_switch2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="환기" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#F6F6F6"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/home_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F6F6F6"
                android:visibility="invisible"
                app:cardBackgroundColor="#F6F6F6"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:background="#F6F6F6"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="#F6F6F6"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/home_textview8"
                            android:layout_width="131dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/home_textview9"
                            android:layout_width="109dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="#FF0000FF"
                            android:textSize="20sp" />

                        <Switch
                            android:id="@+id/home_switch3"
                            android:layout_width="66dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="자동화" />

                        <Switch
                            android:id="@+id/home_switch4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="환기"
                            android:textOff="false"
                            android:textOn="true" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#F6F6F6"
            android:orientation="vertical"
            android:visibility="visible">

            <androidx.cardview.widget.CardView
                android:id="@+id/home_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F6F6F6"
                android:visibility="invisible"
                app:cardBackgroundColor="#F6F6F6"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:background="#F6F6F6"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="#F6F6F6"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/home_textview10"
                            android:layout_width="131dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/home_textview11"
                            android:layout_width="109dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="#FF0000FF"
                            android:textSize="20sp" />

                        <Switch
                            android:id="@+id/home_switch5"
                            android:layout_width="66dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="자동화" />

                        <Switch
                            android:id="@+id/home_switch6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="환기"
                            android:textOff="false"
                            android:textOn="true" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>